<!-- section infromation  -->
<div class="container my-5">
    <div class="row row-cols-1 row-cols-lg-3 row-cols-md-2 g-4 d-flex align-items-center">

        <% if(locals.posts){%>
            <% for(let i=0; i<posts.length; i++){ %>

                <div class="col">
                    <div class="card" >
                        <img src="<%= posts[i].urlToImage %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <small><%= posts[i].publishedAt %></small>
                        <h5 class="card-title"><%= posts[i].title %></h5>
                        <p class="card-text"><%= posts[i].content %></p>
                        <a type="button" class="btn btn-primary" href="<%= posts[i].url %>">Read More</a>
                        </div>
                    </div>
                </div>

            <% }; %>

        <% }else{ %>
            <% console.error(); %>
        <% } %>

       

    </div>

    
</div>
<!-- end seciton information -->

